@namespace BlazorCMS.Client.Components

<div class="c-spinner">
    <div class="@SpinnerClass">
        <div class="rect1"></div>
        <div class="rect2"></div>
        <div class="rect3"></div>
        <div class="rect4"></div>
        <div class="rect5"></div>
    </div>
</div>

@code {

    [Parameter]
    public bool Light { get; set; }

    private string SpinnerClass => Light ? "spinner light" : "spinner";

}
